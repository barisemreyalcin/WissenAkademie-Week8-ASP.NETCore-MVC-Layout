@{
	ViewBag.Title = "News Index";
	Layout = "NewsLayout";
}

<h2 class="bg-warning text-white">Latest News</h2>
<div class="row">
	<div class="col-sm-8">
		<div class="card">
			<div class="card-header">
				<h3>Today's News</h3>
			</div>
			<div class="card-body">
				<ul class="list-group table-hover">
					<li class="list-group-item">
						<a class="btn-outline-success p-2" asp-action="TrumpAssassination" asp-controller="News">Assassination Attempt to Trump</a>
					</li>
					<li class="list-group-item">
						<a class="btn-outline-success p-2" asp-action="MarketDownturn" asp-controller="News">Downturn in the Markets</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>